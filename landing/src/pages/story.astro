<script>
  // Intersection Observer for scroll-triggered animations
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible')
        }
      })
    },
    {
      threshold: 0.2,
      rootMargin: '0px 0px -50px 0px'
    }
  )

  document.querySelectorAll('.timeline-card').forEach((el) => {
    observer.observe(el)
  })

  // Auto-play chain for story narration
  // When first audio plays, it starts the chain automatically
  const players = Array.from(document.querySelectorAll('.audio-player'))

  // When any audio ends, play the next one
  document.addEventListener('audioended', (e) => {
    const currentPlayer = e.target as HTMLElement
    const currentIndex = players.indexOf(currentPlayer)

    if (currentIndex < players.length - 1) {
      const nextPlayer = players[currentIndex + 1]

      // Scroll to next player smoothly
      nextPlayer.scrollIntoView({ behavior: 'smooth', block: 'center' })

      // Wait for scroll, then play
      setTimeout(() => {
        nextPlayer.dispatchEvent(new CustomEvent('playaudio'))
      }, 800)
    }
  })
</script>

